<body>
  <div class="container">
    <h1>Rhodes Index Calculator</h1>
    <label for="bsa">BSA (m²):</label>
    <input type="number" id="bsa" step="any" />

    <label for="aortic">Aortic Root Index (cm/m²):</label>
    <input type="number" id="aortic" step="any" />

    <label for="longAxis">Long Axis Ratio:</label>
    <input type="number" id="longAxis" step="any" />

    <label for="mitral">Mitral Valve Area Index (cm/m²):</label>
    <input type="number" id="mitral" step="any" />

    <button onclick="calculateRhodesIndex()">Calculate</button>

    <div class="result" id="result"></div>
  </div>

  <script>
    function calculateRhodesIndex() {
      const bsa = parseFloat(document.getElementById('bsa').value);
      const aortic = parseFloat(document.getElementById('aortic').value);
      const longAxis = parseFloat(document.getElementById('longAxis').value);
      const mitral = parseFloat(document.getElementById('mitral').value);

      if (isNaN(bsa) || isNaN(aortic) || isNaN(longAxis) || isNaN(mitral)) {
        document.getElementById('result').innerText = 'Please fill in all fields.';
        return;
      }

      const rhodesIndex = 14 * bsa + 0.943 * aortic + 4.78 * longAxis + 0.157 * mitral;

      document.getElementById('result').innerText = `Rhodes Index: ${rhodesIndex.toFixed(2)}`;
    }
  </script>
